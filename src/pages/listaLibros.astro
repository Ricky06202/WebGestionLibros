---
import Footer from "@library/layout/components/Footer.astro";
import Header from "@library/layout/components/Header.astro";
import Logo from "/public/favicon.svg";
import SearchBar from "@library/components/SearchBar";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={Logo.src} />
    <meta name="generator" content={Astro.generator} />
    <title>Lista de Libros</title>
  </head>
  <body>
    <Header />
    <SearchBar client:load />
    <Footer />
  </body>
</html>
