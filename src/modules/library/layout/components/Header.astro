---
import Logo from "/public/favicon.svg";



const { href, title } = Astro.props
---

<nav class="bg-white border-gray-200 dark:bg-gray-900">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <!-- Logo principal -->
    <a
      href="/"
      class="flex items-center space-x-3 rtl:space-x-reverse"
    >
      <img src={Logo.src} class="h-12" />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >Logo</span
      >
    </a>
    <!-- Logo principal -->
    <!-- Input de busqueda -->
    <div
      class="max-w-screen-xl flex flex-nowrap items-center justify-between mx-auto p-4"
    >
      <input
        type="text"
        id="search-navbar"
        class="block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        placeholder="Buscar libro..."
      />
      <div class="top-4 right-4 bg-white rounded-full text-blue-500 p-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 24 24"
          class="w-6 h-6"
        >
          <g fill="currentColor" fill-rule="evenodd" clip-rule="evenodd">
            <path
              d="M10.5 5.5a5 5 0 1 0 0 10a5 5 0 0 0 0-10m-6.5 5a6.5 6.5 0 1 1 13 0a6.5 6.5 0 0 1-13 0"
            ></path>
            <path
              d="M14.47 14.47a.75.75 0 0 1 1.06 0l4 4a.75.75 0 1 1-1.06 1.06l-4-4a.75.75 0 0 1 0-1.06"
            ></path>
          </g>
        </svg>
      </div>
    </div>
    <!-- Input de busqueda -->
    <!-- Elementos para direccionar a las paginas -->
    <div class="hidden w-full md:block md:w-auto mr-10" id="navbar">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white"
      >
        <li>
          <a
            href="#"
            class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0"
            aria-current="page">Mis libros</a
          >
        </li>

        <li>
          <!-- Dropdown boton de colaborar-->
          <button
            id="id_boton_colaborar"
            data-dropdown-toggle="dropdownNavbar"
            class="flex items-center justify-between w-full py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 md:w-auto"
            >Colaborar <svg
              class="w-2.5 h-2.5 ms-2.5"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 10 6"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m1 1 4 4 4-4"></path>
            </svg></button
          >
          <!-- Dropdown menu de colaborar-->
          <div
            id="id_menu_colaborar"
            class="absolute z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44"
          >
            <ul
              class="py-2 text-sm text-gray-700 dark:text-gray-400"
              aria-labelledby="colaborar"
            >
              <li>
                <a
                  href="#"
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >AÃ±adir un libro</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Libros recientes</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Administrar libros</a
                >
              </li>
            </ul>
          </div>
        </li>
        <!-- Dropdown menu de colaborar-->
        <li>
          <!-- Dropdown boton de colaborar-->
          <button
            id="id_boton_explorar"
            data-dropdown-toggle="dropdownNavbar"
            class="flex items-center justify-between w-full py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 md:w-auto dark:text-white md:dark:hover:text-blue-500 dark:focus:text-white dark:border-gray-700 dark:hover:bg-gray-700 md:dark:hover:bg-transparent"
            >Explorar <svg
              class="w-2.5 h-2.5 ms-2.5"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 10 6"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="m1 1 4 4 4-4"></path>
            </svg></button
          >
          <!-- Dropdown boton de colaborar-->
          <!-- Dropdown menu de explorar-->
          <div
            id="id_menu_explorar"
            class="absolute z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700 dark:divide-gray-600"
          >
            <ul
              class="py-2 text-sm text-gray-700 dark:text-gray-400"
              aria-labelledby="explorar"
            >
              <li>
                <a
                  href="#"
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Temas</a
                >
              </li>
              <li>
                <a
                  href="#"
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Tendencias</a
                >
              </li>
              <li>
                <a
                  href="/listaLibros"
                  class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
                  >Lista de libros</a
                >
              </li>
            </ul>
          </div>
        </li>
        <!-- Dropdown menu de explorar-->
      </ul>
    </div>
    <!-- Elementos para direccionar a las paginas -->
    <!-- Menu desplegable (dropdown) -->
    <button
      data-collapse-toggle="navbar-hamburger"
      type="button"
      class="inline-flex items-center justify-center p-2 w-10 h-10 text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="navbar-hamburger"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <!-- Menu desplegable (dropdown) -->
  </div>

</nav>

<script>
	const buton_colaborar = document.getElementById('id_boton_colaborar') as Element
	const buton_explorar = document.getElementById('id_boton_explorar') as Element
	const menu_abierto_colaborar = document.getElementById('id_menu_colaborar') as Element
	const menu_abierto_explorar = document.getElementById('id_menu_explorar') as Element

	buton_colaborar.addEventListener('click', () => {
		menu_abierto_colaborar.classList.toggle('hidden')
		menu_abierto_explorar.classList.add('hidden')
	})

	buton_explorar.addEventListener('click', () => {
		menu_abierto_explorar.classList.toggle('hidden')
		menu_abierto_colaborar.classList.add('hidden')
	})
</script>
